<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">

    <!--Used relative layout entirely in the mimic-->
    <!--An image of blue square was used here-->
    <ImageView
        android:id="@+id/blue1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/navy_blue_square_icon" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="First and last name,city age of post"
        android:layout_alignTop="@id/blue1"
        android:layout_toRightOf="@id/blue1"
        android:textStyle="italic" />

    <!--the arrow icon (svg) is imported from the material design website-->
    <!--the arrow is right aligned to the parent(screen)-->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_outline_keyboard_arrow_down_24px"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name1"
        android:layout_toRightOf="@id/blue1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam," />

    <!--smiley face is a png downloaded from the internet-->
    <ImageView
        android:id="@+id/thank1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/text1"
        android:layout_below="@id/text1"
        android:src="@drawable/smiley_face_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thank1"
        android:layout_below="@id/text1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="Thank"/>

    <ImageView
        android:id="@+id/blue2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/navy_blue_square_icon"
        android:layout_below="@id/thank1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="First and last name,city age of post"
        android:layout_alignTop="@id/blue2"
        android:layout_toRightOf="@id/blue2"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@id/blue2"
        android:src="@drawable/ic_outline_keyboard_arrow_down_24px"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name2"
        android:layout_toRightOf="@id/blue2"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do" />

    <ImageView
        android:id="@+id/thank2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/text2"
        android:layout_below="@id/text2"
        android:src="@drawable/smiley_face_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thank2"
        android:layout_below="@id/text2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="Thank"/>

    <ImageView
        android:id="@+id/blue3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/navy_blue_square_icon"
        android:layout_below="@id/thank2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="First and last name,city age of post"
        android:layout_alignTop="@id/blue3"
        android:layout_toRightOf="@id/blue3"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@id/blue3"
        android:src="@drawable/ic_outline_keyboard_arrow_down_24px"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name3"
        android:layout_toRightOf="@id/blue3"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:text="lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut" />

    <ImageView
        android:id="@+id/thank3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/text3"
        android:layout_below="@id/text3"
        android:src="@drawable/smiley_face_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thank3"
        android:layout_below="@id/text3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="Thank"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/thank3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="1"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/smiley_face_icon"
        android:layout_alignTop="@id/count"
        android:layout_toLeftOf="@id/count"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"/>


    <!--the camera icon is downloaded from internet-->
    <ImageView
        android:id="@+id/camera"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/camera_icon"
        android:layout_alignParentBottom="true"/>

    <!--did some research here of EditText-->
    <!--A default text is set and the text color is set to be dark grey-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/camera"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:text="Add a reply..."
        android:textColor="#888888"/>

    <!-- A line is manually drawn above the text field-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/camera"
        android:layout_marginBottom="15dp" />


</RelativeLayout>

